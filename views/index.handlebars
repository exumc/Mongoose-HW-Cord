<div class="articles">
  {{#grouped_each 3 dbArticle}}
  <div class="row">
    {{#each this}}
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          <a href={{link}}>
            <img src={{image}} class="responsive-img">
          </a>
        </div>
        <div class="card-content">
          <h3>{{title}}</h3>
        </div>
        <div class="card-action">
          <button id="saveArticle" class="btn waves-effect waves-light red" type="submit" name="action">Save Link
          </button>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{/grouped_each}}
</div>